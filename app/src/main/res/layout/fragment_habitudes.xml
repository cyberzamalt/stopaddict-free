<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

                <!-- Bandeau profil (progression) -->
        <LinearLayout
            android:id="@+id/habitudes_bandeau_profil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:background="@android:drawable/dialog_holo_light_frame">

            <TextView
                android:id="@+id/habitudes_profil_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Profil complété à 0%"
                android:textSize="16sp"
                android:textStyle="bold"
                android:drawablePadding="8dp"
                android:paddingBottom="8dp" />

            <ProgressBar
                android:id="@+id/habitudes_profil_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/profil_progress_drawable"
                android:splitTrack="false"/>

            <TextView
                android:id="@+id/habitudes_txt_profil_restant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="0 champs restants"
                android:textSize="12sp"
                android:paddingTop="6dp" />

        </LinearLayout>

        <!-- Zone Habitudes -->
        <LinearLayout
            android:id="@+id/habitudes_container_habitudes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <!-- Max Cigarettes -->
            <EditText
                android:id="@+id/habitudes_input_max_cigarettes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Max cigarettes par jour"
                android:inputType="number"
                android:imeOptions="actionNext"
                android:layout_marginBottom="8dp" />

            <!-- Max Joints -->
            <EditText
                android:id="@+id/habitudes_input_max_joints"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Max joints par jour"
                android:inputType="number"
                android:imeOptions="actionNext"
                android:layout_marginBottom="8dp" />

            <!-- Max Alcool Global -->
            <EditText
                android:id="@+id/habitudes_input_max_alcool_global"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Max alcool global par jour"
                android:inputType="number"
                android:imeOptions="actionNext"
                android:layout_marginBottom="8dp" />

            <!-- Max Bières -->
            <EditText
                android:id="@+id/habitudes_input_max_bieres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Max bières par jour"
                android:inputType="number"
                android:imeOptions="actionNext"
                android:layout_marginBottom="8dp" />

            <!-- Max Liqueurs -->
            <EditText
                android:id="@+id/habitudes_input_max_liqueurs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Max liqueurs par jour"
                android:inputType="number"
                android:imeOptions="actionNext"
                android:layout_marginBottom="8dp" />

            <!-- Max Alcool Fort -->
            <EditText
                android:id="@+id/habitudes_input_max_alcool_fort"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Max alcool fort par jour"
                android:inputType="number"
                android:imeOptions="actionNext"
                android:layout_marginBottom="12dp" />

        </LinearLayout>

        <!-- Zone Volonté (construite dynamiquement dans le code) -->
        <LinearLayout
            android:id="@+id/habitudes_container_volonte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:padding="16dp" />

                <!-- Boutons en bas de page -->
        <LinearLayout
            android:id="@+id/habitudes_buttons_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:paddingTop="16dp"
            android:paddingBottom="8dp">

            <Button
                android:id="@+id/habitudes_btn_effacer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Effacer" />

            <Button
                android:id="@+id/habitudes_btn_sauvegarder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sauvegarder" />
        </LinearLayout>
        
    </LinearLayout>
</ScrollView>
