<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

               <!-- Bandeau profil (progression) -->
        <LinearLayout
            android:id="@+id/accueil_bandeau_profil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:background="@android:drawable/dialog_holo_light_frame">

            <!-- Texte principal (on réutilise l'ID existant) -->
            <TextView
                android:id="@+id/accueil_txt_profil_complet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="Profil complété à 0%"
                android:textSize="16sp"
                android:textStyle="bold"
                android:drawablePadding="8dp"
                android:paddingBottom="8dp" />

            <!-- Barre de progression -->
            <ProgressBar
                android:id="@+id/accueil_profil_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/profil_progress_drawable"
                android:splitTrack="false"/>

            <!-- Champs restants -->
            <TextView
                android:id="@+id/accueil_txt_profil_restant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="0 champs restants"
                android:textSize="12sp"
                android:paddingTop="6dp" />

        </LinearLayout>

        <!-- Total jour global (carte) -->
        <LinearLayout
            android:id="@+id/accueil_card_total_jour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:background="@android:drawable/dialog_holo_light_frame">

            <!-- Ligne 1 : libellé -->
            <TextView
                android:id="@+id/accueil_txt_total_jour_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total aujourd'hui:"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingBottom="6dp" />

            <!-- Ligne 2 : valeur (on garde l'ID EXISTANT pour ne rien casser côté Kotlin) -->
            <TextView
                android:id="@+id/accueil_txt_total_jour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="28sp"
                android:textStyle="bold"
                android:gravity="center" />

        </LinearLayout>

        <!-- Bandeau conseils (carte) -->
        <LinearLayout
            android:id="@+id/accueil_card_conseil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="14dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/conseil_card_bg">
        
            <!-- (Étape 2) Icône : pour l’instant cachée -->
            <ImageView
                android:id="@+id/accueil_img_conseil"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="10dp"
                android:visibility="gone" />
        
            <!-- On garde le même ID pour ne rien casser côté Kotlin -->
            <TextView
                android:id="@+id/accueil_txt_conseil"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Conseil"
                android:textSize="16sp"
                android:textColor="#1B5E20"
                android:gravity="center_vertical" />
        
        </LinearLayout>


        <!-- Catégorie Cigarettes -->
        <LinearLayout
            android:id="@+id/accueil_container_cigarettes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:layout_marginBottom="8dp"
            android:background="@android:drawable/dialog_holo_light_frame">

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/accueil_check_cigarettes"
                android:text="Cigarettes"
                android:textSize="14sp"
                app:buttonCompat="@drawable/checkbox_classic"
                app:buttonTint="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="20dp"
                android:paddingStart="6dp"
                android:checked="true" />

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/accueil_btn_moins_cigarettes"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/bg_btn_moins"
                android:scaleType="center"
                android:padding="12dp"
                android:contentDescription="Moins"
                android:src="@drawable/ic_minus" />
                        
            <TextView
                android:id="@+id/accueil_txt_cigarettes"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="24sp"
                android:gravity="center"
                android:layout_gravity="center_vertical" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/accueil_btn_plus_cigarettes"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/bg_btn_plus"
                android:scaleType="center"
                android:padding="12dp"
                android:contentDescription="Plus"
                android:src="@drawable/ic_plus" />

        </LinearLayout>

        <!-- Catégorie Joints -->
