<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Bandeau profil -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@android:color/transparent"
            android:padding="12dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/accueil_txt_profil_complet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Profil: Complet"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Total jour global -->
        <TextView
            android:id="@+id/accueil_txt_total_jour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total aujourd'hui: 0"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:background="@color/blue_primary"
            android:textColor="@android:color/white" />

                <!-- Bandeau conseils -->
        <TextView
            android:id="@+id/accueil_txt_conseil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Conseil: Chaque pas compte dans votre parcours."
            android:textSize="18sp"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@color/conseil_background"
            android:textColor="@color/conseil_text"
            android:gravity="center" />

        <!-- Catégorie Cigarettes -->
        <LinearLayout
            android:id="@+id/accueil_container_cigarettes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:layout_marginBottom="8dp"
            android:background="@android:drawable/dialog_holo_light_frame">

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/accueil_check_cigarettes"
                android:text="Cigarettes"
                android:textSize="14sp"
                app:buttonCompat="@drawable/checkbox_classic"
                app:buttonTint="@null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="20dp"
                android:paddingStart="6dp"
                android:checked="true" />

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/accueil_btn_moins_cigarettes"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/bg_btn_moins"
                android:scaleType="center"
                android:padding="12dp"
                android:contentDescription="Moins"
                android:src="@drawable/ic_minus" />
                        
            <TextView
                android:id="@+id/accueil_txt_cigarettes"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="24sp"
                android:gravity="center"
                android:layout_gravity="center_vertical" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/accueil_btn_plus_cigarettes"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/bg_btn_plus"
                android:scaleType="center"
                android:padding="12dp"
                android:contentDescription="Plus"
                android:src="@drawable/ic_plus" />

        </LinearLayout>

        <!-- Catégorie Joints -->
