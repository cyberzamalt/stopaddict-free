<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <!-- Header avec icÃ´ne + nom app + date/heure (cliquable pour console debug) -->
    <LinearLayout
        android:id="@+id/main_header_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center"
        android:background="@color/header_background"
        android:clickable="true"
        android:focusable="true">

        <ImageView
        android:id="@+id/main_header_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/icone_stopaddict"
        android:contentDescription="@string/app_name" />

        <TextView
            android:id="@+id/main_header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop Addict"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center" />
    </LinearLayout>

        <!-- Bandeau rÃ©sumÃ© jour (collÃ© au header) -->
    <HorizontalScrollView
        android:id="@+id/header_resume_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/header_resume_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:background="#FFEFEFEF">

            <TextView
                android:id="@+id/header_resume_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jour :"
                android:textSize="14sp"
                android:textStyle="bold"
                android:paddingRight="8dp" />

            <!-- Cigarettes -->
            <TextView
                android:id="@+id/header_resume_cigarette"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸš¬ 0"
                android:textSize="13sp"
                android:paddingLeft="8dp" />

            <!-- Joints -->
            <TextView
                android:id="@+id/header_resume_joint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŒ¿ 0"
                android:textSize="13sp"
                android:paddingLeft="8dp" />

            <!-- Alcool global -->
            <TextView
                android:id="@+id/header_resume_alcool_global"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ¥ƒG 0"
                android:textSize="13sp"
                android:paddingLeft="8dp" />

            <!-- BiÃ¨res -->
            <TextView
                android:id="@+id/header_resume_biere"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸº 0"
                android:textSize="13sp"
                android:paddingLeft="8dp" />

            <!-- Liqueur -->
            <TextView
                android:id="@+id/header_resume_liqueur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ· 0"
                android:textSize="13sp"
                android:paddingLeft="8dp" />

            <!-- Alcool fort -->
            <TextView
                android:id="@+id/header_resume_alcool_fort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ¥ƒ 0"
                android:textSize="13sp"
                android:paddingLeft="8dp" />

        </LinearLayout>
    </HorizontalScrollView>

    <!-- ViewPager2 pour afficher les fragments -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/main_view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Container pour pub AdMob (version gratuite uniquement) -->
    <FrameLayout
        android:id="@+id/main_ad_container"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/darker_gray" />

    <!-- TabLayout pour navigation (5 onglets en bas) -->
    
    <com.google.android.material.tabs.TabLayout
    android:id="@+id/main_tab_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"

    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    app:tabPaddingStart="4dp"
    app:tabPaddingEnd="4dp"

    app:tabMode="fixed"
    app:tabGravity="fill"
    app:tabTextColor="@color/tab_unselected"
    app:tabSelectedTextColor="@color/tab_selected"
    app:tabIndicatorColor="@color/tab_indicator"
    app:tabIndicatorHeight="3dp" />

</LinearLayout>
