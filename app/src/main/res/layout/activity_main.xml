<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Header avec nom app + date/heure (cliquable pour console debug) -->
    <TextView
        android:id="@+id/main_header_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="StopAddict"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="16dp"
        android:gravity="center"
        android:background="@android:color/holo_blue_light"
        android:textColor="@android:color/white"
        android:clickable="true"
        android:focusable="true" />

    <!-- ViewPager2 pour afficher les fragments -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/main_view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Container pour pub AdMob (version gratuite uniquement) -->
    <FrameLayout
        android:id="@+id/main_ad_container"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/darker_gray" />

    <!-- TabLayout pour navigation (5 onglets en bas) -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/main_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:tabMode="fixed"
        app:tabGravity="fill"
        app:tabTextColor="@android:color/darker_gray"
        app:tabSelectedTextColor="@android:color/holo_blue_dark"
        app:tabIndicatorColor="@android:color/holo_blue_dark"
        app:tabIndicatorHeight="3dp" />

</LinearLayout>
