            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Catégories actives"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"
                    android:visibility="gone"/>

            <CheckBox
                android:id="@+id/reglages_check_cigarettes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cigarettes"
                android:checked="true" 
                    android:visibility="gone"/>

            <CheckBox
                android:id="@+id/reglages_check_joints"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Joints"
                android:checked="true"
                    android:visibility="gone"/>

            <CheckBox
                android:id="@+id/reglages_check_alcool_global"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alcool global"
                android:checked="true" 
                    android:visibility="gone"/>

            <CheckBox
                android:id="@+id/reglages_check_bieres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bières"
                android:checked="true"
                    android:visibility="gone"/>

            <CheckBox
                android:id="@+id/reglages_check_liqueurs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Liqueurs"
                android:checked="true" 
                    android:visibility="gone"/>

            <CheckBox
                android:id="@+id/reglages_check_alcool_fort"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alcool fort"
                android:checked="true"
                    android:visibility="gone"/>
        </LinearLayout>

        <!-- Zone Coûts Cigarettes -->
